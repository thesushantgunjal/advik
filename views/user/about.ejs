        </div>
      </div>
    </div>
      <!-- About Us Section end -->
  
   
  <!-- Mission and Vision Section -->
<section class="mission-vision bg-light text-center">
<div class="container">
  <div class="row justify-content-center">
    <!-- Mission Card -->
    <div class="col-md-6 mb-4" data-aos="zoom-in" data-aos-duration="1000">
      <div class="card mission-card shadow-sm">
        <div class="card-body">
          <div class="icon-circle">
            <!-- <i class="bi bi-flag"></i> -->
          </div>
          <h2 class="section-heading">Our Mission</h2>
          <p class="lead"><%-our_mission_visions.Our_mission_text%></p>
        </div>
      </div>
    </div>
    <!-- Vision Card -->
    <div class="col-md-6 mb-4" data-aos="zoom-in" data-aos-duration="1000">
      <div class="card vision-card shadow-sm">
        <div class="card-body">
          <div class="icon-circle">
            <!-- <i class="bi bi-eye"></i> -->
          </div>
          <h2 class="section-heading">Our Vision</h2>
          <p class="lead"><%-our_mission_visions.our_vision_text%></p>
        </div>
      </div>
    </div>
  </div>
</div>
</section>
  <!-- Founders Teacher Section -->
 <section>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="row"> 
        <div class="col-md-7">
          <div class="col-12">
            <div class="ms-2 px-5 py-5"> 
            <h1 class="About_Teacher">About Our Teacher</h1>
            <p><%-founders.founder_information%></p>
          </div>
          </div>
          <div class="row">
          <div class="col-md-6">
            <div class="px-5 text-center"> 
            <i class="fa-solid fa-envelope fs-2 mb-3"></i>
            <h5 class="text-center">Email Service</h5>
            <p class="text-center"><%-founders.founder_email%></p>
          </div>
          </div>
          <div class="col-md-6">
            <div class="px-5 text-center"> 
            <i class="fa-solid fa-phone fs-3 mb-3"></i>
            <h5 class="text-center">Phone Service</h5>
            <p class="text-center"><%-founders.founder_mobile%></p>
          </div>
          </div>
        </div>
        </div>
        <div class="col-md-5 col-12">
          <img class="my-5 Teacher_Img img-fluid" src="/uploads/<%-founders.founder_photo%>"  alt="">
      </div>
      </div>
    </div>
    </div>
  </div>
 </section>

<!-- Founders Section end-->

<!-- FAQ -->
<section class="FAQ_section"> 
  <div class="container py-5">
    <div class="row">
      <div class="col-12">
    <h2 class="text-center mb-4">Frequently Asked Questions</h2>
    <div class="accordion" id="faqAccordion">
        <!-- FAQ Item 1 -->
        <%for(i of faqs){ %>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#<%=i.faq_id %>" aria-expanded="true" aria-controls="<%=i.faq_id %>">
                  <%=i.faq_question_text %>
                </button>
            </h2>
            <div id="<%=i.faq_id %>" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#faqAccordion">
                <div class="accordion-body">
                  <%=i.faq_answer_text %>
                </div>
            </div>
        </div>
        <% } %>
      
        
    </div>
</div>
</div>
</div>
</section>
<!-- FAQ end -->

<!-- Testimonials Section -->
<section class="testimonial-section">
  <div class="container text-center">
    <h2 class="mb-5">Testimonials</h2>
  
    <!-- Carousel for Testimonials -->
    <div id="testimonialCarousel" class="carousel slide testimonial-carousel" data-bs-ride="carousel">
      <div class="carousel-inner">
        <%for(i of testimonials){ %>

        <!-- Testimonial 1 -->
        <div class="carousel-item active">
          <div class="row justify-content-center">
            <div class="col-md-8" data-aos="fade-up" data-aos-duration="1000">
              <div class="testimonial-card">
                <img src="/uploads/<%=i.testimonial_photo %>" alt="Smiling young man with notebooks giving a thumbs up" class="student-img">
                <p class="lead"><%=i.testimonial_text %></p>
                <p class="student-name"><%=i.testimonial_name %></p>
              </div>
            </div>
          </div>
        </div>
        <% } %>

        
      </div>

      <!-- Carousel Controls -->
      <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
      </button>
    </div>
  </div>
</section>
