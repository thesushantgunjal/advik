          <nav class="breadnav" aria-label="breadcrumb">
              <ol class="breadcrumb  justify-content-center">
                  <li class="breadcrumb-item fs-5">
                      <a class="text-decoration-none text-white" href="/">Home</a>
                  </li>
                  <li class="breadcrumb-item fs-5 active text-info" aria-current="page">
                      About
                  </li>
              </ol>
          </nav>
      </div>
  </div>
</section>

    <!-- About Us Section -->
    <div class="container-fluid About_Home_background">
      <div class="row">
        <div class="col-md-6 mt-5" data-aos="fade-up" data-aos-duration="1000">
          <h1 class="ms-5 mt-2 text-shadow">About Us</h1>
          <p class="ms-5"><%-old_data.aboutText1%>.<br><br>
            <%-old_data.aboutText2%>.</p>
