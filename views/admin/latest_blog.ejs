CREATE TABLE latest_blog (
    latest_blog_id INT AUTO_INCREMENT PRIMARY KEY,
    latest_blog_img VARCHAR(255) NOT NULL,
    latest_blog_date DATE NOT NULL,
    latest_blog_post_by VARCHAR(100) NOT NULL,
    latest_blog_content TEXT NOT NULL,
    blog_short_description TEXT
    
);

-->




