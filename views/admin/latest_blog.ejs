<%-include("navbar.ejs")%>

    <form action="/admin/latest_blog" method="post" enctype="multipart/form-data">
        <div class="container-fluid bg-white p-4">
            <div class="row">
                <div class="col-md-12 mt-4">
                    <h3 class="heading">Latest Blog Posts</h3>
                </div>
            </div>

            <div class="row">
                <!-- Dropdown selection for category -->
               
                
                <!-- Input for new category name -->
                <div class="col-md-6 mb-3">
                    <label for="category_name">latest blog img</label>
                    <input type="file"  name="latest_blog_img" class="form-control">
                </div>
                
                <div class="col-md-6 mb-3">
                    <label for="category_name">Post Date</label>
                    
                   
                    <input type="date"  name="latest_blog_date" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="category_name">Post By</label>
                    
                   
                    <input type="text"  name="latest_blog_post_by" class="form-control">
                </div>
                
                <div class="col-md-6 mb-3">
                    <label for="category_name">Content</label>
                    
                   
                    <input type="text"  name="latest_blog_content" class="form-control">
                </div>
               
                <div class="col-md-12 mb-3">
                    <label for="category_name">Short Description</label>
                    
                     <textarea name="blog_short_description" class="form-control" rows="5" id="editor"></textarea>
                    
                    
    
                </div>
               
               
            </div>
    
            <div class="row">
                <div class="col-md-12 mb-3 mt-5 text-center">
                    <button type="submit" class="btn btn-primary">Save </button>
                </div>
            </div>
        </div>
    </form>
    <div class="container-fluid mt-5 mb-5 p-3 bg-white">
        <div class="row">
            <div class="col-md-12">
                <h3 class="heading">Gallery Category List</h3>
            </div>
        </div>
        <div class="col-md-12">
            <!-- Added table-responsive for horizontal scrolling on smaller screens -->
            <div class="table-responsive">
                <table class="table table-bordered border-info">
                    <thead>
                        <tr>
                            <th>Action</th>
                            <th>SN</th>
                            <th>Latest Blog Image</th>
                            <th>Post Date</th>
                            <th>Post By</th>
                            <th>Content</th>
                            <th>Short Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% sr = 1; for (i of latest_blog_data) { %>
                        <tr>
                            <td style="white-space: nowrap;">
                                <!-- Action buttons with spacing -->
                                <a href="/admin/latest_blog_update/<%- i.latest_blog_id %>">
                                    <button class="btn btn-primary btn-sm m-1">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                </a>
                                <a href="/admin/latest_blog_delete/<%- i.latest_blog_id %>" onclick="return confirmDelete()">
                                    <button class="btn btn-danger btn-sm m-1">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </a>
                            </td>
                            <td><%- sr++ %></td>
                            <!-- Added img-fluid to ensure responsive images -->
                            <td><img src="/uploads/<%- i.latest_blog_img %>" alt="" class="img-fluid" width="100px"></td>
                            <td><%- i.latest_blog_date %></td>
                            <td><%- i.latest_blog_post_by %></td>
                            <td><%- i.latest_blog_content %></td>
                            <td><%- i.blog_short_description %></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <script>
        // JavaScript function for delete confirmation
        function confirmDelete() {
            return confirm('Are you sure you want to delete this item?');
        }
    </script>
    
    
