<%-include("navbar.ejs")%>

<form action="/admin/gallry_categary_form" method="post">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="row">
                <div class="col-md-12 mt-4">
                    <h3 class="heading">Gallery Category</h3>
                </div>
            </div>
            <div class="col-md-12 mb-3">
                
               category name
               <input type="text" name="category_name" class="form-control">
            </div>
            <div class="col-md-12 mb-3 text-center">
                
                <button class="btn btn-primary">save category</button>
                
             </div>
        </div>
    </div>
    </form>
    <div class="container-fluid mt-5 mb-5 p-3 bg-white">
        <div class="row">
            <div class="col-md-12">
                <h3 class="heading">Gallery Category List</h3>
            </div>
        </div>
        <div class="col-md-12">
            <!-- Added table-responsive for horizontal scrolling on smaller screens -->
            <div class="table-responsive">
                <table class="table table-bordered border-info">
                    <thead>
                        <tr>
                            <th>Action</th>
                            <th>SN</th>
                            <th>Category ID</th>
                            <th>Category Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% sr = 1; for (i of old_data) { %>
                        <tr>
                            <td style="white-space: nowrap;">
                                <!-- Action buttons with better spacing and responsiveness -->
                                <a href="/admin/edit_category/<%- i.category_id %>">
                                    <button class="btn btn-primary btn-sm m-1">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                </a>
                                <a href="/admin/delete_category/<%- i.category_id %>" onclick="return confirmDelete()">
                                    <button class="btn btn-danger btn-sm m-1">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </a>
                            </td>
                            <td><%- sr++ %></td>
                            <td><%- i.category_id %></td>
                            <td><%- i.category_name %></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <script>
        // JavaScript function for delete confirmation
        function confirmDelete() {
            return confirm('Are you sure you want to delete this category?');
        }
    </script>


