<%-include("navbar.ejs")%>

<form action="/admin/level_page_form" method="post" >
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="col-md-12">
                <h3 class="heading">Course Form</h3>
            </div>
        </div>

        <div class="row">
            <!-- Dropdown selection for category -->
            <div class="col-md-6 mb-3">
                <div class="form-group">
                    <label for="options">Category Name</label>
                    <select class="form-control" id="options" name="category_id">
                        
                        <option value="">Choose an option</option>
                       
                            <% for ( i of level_data) { %>
                                
                                <option name="category_id" value="<%- i.level_category_id %>"><%- i.category_name %></option>
                            <% } %>
                    
                    </select>
                </div>
            </div>
            
            <!-- Input for new category name -->
            
            
            <div class="col-md-6 mb-3">
                <label for="subject">Age</label>
                <input type="text" name="age" id="age" class="form-control" required>
            </div>

            <div class="col-md-12 mb-3">
                <label for="subject">information</label>
                <textarea name="level_information" class="form-control" rows="5" id="editor"></textarea>
            </div>
            

            

            

            
            
        </div>

        <div class="row">
            <div class="col-md-12 mb-3 mt-5 text-center">
                <button type="submit" class="btn btn-primary">Save </button>
            </div>
        </div>
    </div>
</form>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h3 class="heading">Course Form List</h3>
        </div>
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>Action</th>
                            <th>SN</th>
                            <th>category id</th>
                            <th>Age</th>
                            <th>information</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        <% sr=1; for(i of level){%> 
                        <tr>
                            <td style="white-space: nowrap;">
                                <a href="/admin/level_update/<%-i.level_id%>">
                                <button class="btn btn-primary btn-sm"><i class="fa fa-edit"></i></button>
                            </a>
                            <a href="/admin/delete_level/<%-i.level_id%>" onclick="return confirmDelete()">
                                <button class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
                            </a>
                            </td>
                            <td><%-sr++%></td>
                            <td><%-i.level_category_id%></td>
                            <td><%-i.age%></td>
                            <td><%-i.level_information%></td>
                           
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this item?');
    }
</script>
