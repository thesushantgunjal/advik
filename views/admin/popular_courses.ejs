<%-include("navbar.ejs")%>
<form action="/admin/save_popular_course" method="post" enctype="multipart/form-data" class="w-100">
    <div class="container-fluid bg-white p-3 shadow-lg p-3 mb-5 bg-body rounded">
        
        <div class="row">
            <div class="col-md-12 mt-4">
                <h3 class="heading">Popular Course Details</h3>
            </div>
        </div>

        <!-- Popular Course Photo -->
        <div class="row mb-3">
            <div class="col-md-12">
                <label for="popular_courses_photo">Course Photo</label>
                <input type="file" name="popular_courses_photo" id="popular_courses_photo" class="form-control" accept="image/*">
            </div>
        </div>

        <!-- Popular Course Text -->
        <div class="row mb-3">
            <div class="col-md-12">
                <label for="popular_courses_text">Course Title</label>
                <input type="text" name="popular_courses_text" id="popular_courses_text" class="form-control">
            </div>
        </div>

        <!-- Popular Course Information -->
        <div class="row mb-3">
            <div class="col-md-12">
                <label for="popular_courses_information">Course Information</label>
                <textarea name="popular_courses_information" id="popular_courses_information" class="form-control" rows="1"></textarea>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>
<div class="container-fluid mt-5 mb-5 p-3 bg-white">
    <div class="row">
        <div class="col-md-12">
            <h3 class="heading">Slider List</h3>
        </div>
    </div>
    <div class="col-md-12">
        <!-- Added table-responsive for horizontal scrolling on small screens -->
        <div class="table-responsive">
            <table class="table table-bordered border-info">
                <thead>
                    <tr>
                        <th>Actions</th>
                        <th>SN</th>
                        <th>Course Photo</th>
                        <th>Course Name</th>
                        <th>Course Information</th>
                    </tr>
                </thead>
                <tbody>
                    <% sr = 1; for (i of popular_courses) { %>
                    <tr>
                        <td>
                            <a href="/admin/edit_popular_course/<%- i.popular_course_id %>" class="bi bi-pencil-square text-success fs-5 m-1"></a>
                            <a href="/admin/delete_popular_course/<%- i.popular_course_id %>" class="bi bi-trash3-fill text-danger fs-5 m-1" onclick="return confirm('Are you sure you want to delete this course?');"></a>
                        </td>
                        <td><%= sr++ %></td>
                        <td>
                            <img src="/uploads/<%- i.popular_courses_photo %>" class="img-fluid rounded shadow" width="50px" height="50px">
                        </td>
                        <td><%- i.popular_courses_text %></td>
                        <td><%- i.popular_courses_information %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>


<%-include("footer.ejs")%>

