<%-include("navbar.ejs")%>

<form action="/admin/result_categary_form" method="post">
    <div class="container-fluid bg-white p-4">
        <div class="row">
            <div class="row">
                <div class="col-md-12 mt-4">
                    <h3 class="heading">Result Category</h3>
                </div>
            </div>
            
            <div class="col-md-12 mb-3">
                
               category name
               <input type="text" name="category_name" class="form-control">
            </div>
            <div class="col-md-12 mb-3 text-center">
                
                <button class="btn btn-primary">save category</button>
                
             </div>
        </div>
    </div>
    </form>


    <div class="container-fluid mt-5 mb-5 p-3 bg-white">
        <div class="row">
            <div class="col-md-12">
                <h3 class="heading">Result Category List</h3>
            </div>
            <div class="col-md-12">
               <table class="table table-bordered border-info">
                        <thead>
                            <tr>
                                <th>Action</th>
                                <th>SN</th>
                                <th>category id</th>
                                <th>category name</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            <% sr=1; for(i of result_data){%> 
                            <tr>
                                <td style="white-space: nowrap;">
                                    <a href="/admin/edit_result_category/<%-i.result_category_id%>">
                                    <button class="btn btn-primary btn-sm"><i class="fa fa-edit"></i></button>
                                </a>
                                <a href="/admin/delete_result_category/<%-i.result_category_id%>" onclick="return confirmDelete()" >
                                    <button class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
                                </a>
                                </td>
                               <td><%-sr++%></td>
                               <td><%-i.result_category_id%></td>
                               <td><%-i.category_name%></td>
                               
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    <script>
        function confirmDelete() {
            return confirm('Are you sure you want to delete this item?');
        }
    </script>
